@import "/styles/layout.wxss";

.expand-container {
  padding: 0 24px;
  background-color: rgb(126, 122, 145);
  color: #e6e6e6;
}

.hide {
  display: none;
}

.nav-bar {
  overflow: hidden;
  box-sizing: border-box;
}

.icon--back {
  width: 30px;
  height: 30px;
}

.title {
  margin-left: 10px;
  min-width: 160px;
  flex: 1;
}

.title-wrap {
  flex: 1;
  min-width: 240px;
}

.footer {
  padding: 0 24px;
}

.footer .icon {
  width: 40px;
  height: 40px;
}

.expand-cover {
  width: 100%;
  height: 100%;
}

.music-title {
  margin-top: 48px;
  font-size: 20px;
}

.cover-area {
  margin: 8px 0;
  width: 100%;
  aspect-ratio: 1 / 1;
  overflow: hidden;
}

.cover {
  /* aspect-ratio: 1 / 1; */
  flex-shrink: 0;
}

.icon {
  width: 24px;
  height: 24px;
}