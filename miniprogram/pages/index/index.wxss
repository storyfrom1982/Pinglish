page {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.scroll-area {
  flex: 1;
  overflow-y: hidden;
  padding: 0 16px;
  box-sizing: border-box;
}

.intro {
  padding: 30px;
  text-align: center;
}

.app-bar {
  position: absolute;
  width: 100vw;
  height: 100vh;
  pointer-events: none;
}

.title {
  margin-top: 16px;
  font-size: 20px;
  font-weight: 600;
}

.cards {
  margin: 24px 0;
  display: flex;
  flex-direction: row;
}

.card {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  margin-right: 10px;
}

.cover {
  width: 150px;
  height: 150px;
  margin-bottom: 10px;
}